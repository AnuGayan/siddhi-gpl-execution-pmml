<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.wso2.extension.siddhi.execution.pmml</groupId>
        <artifactId>siddhi-execution-pmml-parent</artifactId>
        <version>4.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>siddhi-gpl-execution-pmml</artifactId>
    <name>Siddhi Execution PMML Extension</name>
    <url>https://github.com/wso2-extensions/siddhi-gpl-execution-pmml</url>
    <packaging>bundle</packaging>

    <dependencies>
        <dependency>
            <groupId>org.wso2.siddhi</groupId>
            <artifactId>siddhi-query-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.siddhi</groupId>
            <artifactId>siddhi-query-compiler</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.siddhi</groupId>
            <artifactId>siddhi-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.orbit.org.jpmml</groupId>
            <artifactId>pmml-model</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.orbit.org.jpmml</groupId>
            <artifactId>pmml-manager</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.orbit.org.jpmml</groupId>
            <artifactId>pmml-schema</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.orbit.org.jpmml</groupId>
            <artifactId>pmml-evaluator</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.orbit.joda-time</groupId>
            <artifactId>joda-time</artifactId>
        </dependency>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Private-Package>
                            org.jpmml.*,
                            org.dmg.pmml.*,
                            ]
                        </Private-Package>
                        <Export-Package>
                            !org.jpmml.*,
                            !org.dmg.pmml.*,
                            org.wso2.extension.siddhi.execution.pmml.*
                        </Export-Package>
                        <Import-Package>
                            org.jpmml.evaluator.*; version="${pmml.evaluator.version}",
                            org.jpmml.manager.*; version="${pmml.evaluator.version}",
                            org.jpmml.model.*; version="${pmml.evaluator.version}",
                            org.jpmml.schema.*; version="${pmml.evaluator.version}",
                            *;resolution:=optional
                        </Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>